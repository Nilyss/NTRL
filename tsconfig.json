{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "lib": ["dom", "es2016"],
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./nrtl",
    "emitDeclarationOnly": false
  },
  "include": ["src/**/*"]
}